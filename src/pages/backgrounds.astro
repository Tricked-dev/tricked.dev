---
import Layout from "../layouts/Layout.astro";
import allNames from "../../public/allNames.json";

---
<Layout title="blogs" description="Blog articles i made :)">
    <style>
      ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
      }
      @media (min-width: 600px) {
        ul {
          grid-template-columns: 1fr 1fr;
        }
      }
      ul li {
        width: 100%;
        aspect-ratio: 16 / 9;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #181818;
        border-radius: 8px;
      }
      ul li img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 8px;
        display: block;
      }
    </style><section>
      <ul>
        {
        allNames.map((name) => (
          <li>
            <img src={"https://bg.tricked.dev/" + name} alt={name} />
          </li>
        ))
        }
      </ul>
    </section>
  </Layout>
  