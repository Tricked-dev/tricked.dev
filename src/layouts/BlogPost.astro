---
import Layout from "./Layout.astro";

export interface Props {
  url: string;
  file: string;
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
    heroImage?: string;
    about: boolean;
  };
}

const {
  url,
  file,
  content: { title, description, pubDate, updatedDate, heroImage, about },
} = Astro.props;
---

<Layout title={title} description={description} image={heroImage}>
  <style>
    .title {
      font-size: 2em;
      margin: 0.25em 0 0;
    }
    hr {
      border-top: 1px solid #ddd;
      margin: 1rem 0;
    }
  </style>

  <article>
    {
      heroImage && (
        <img
          transition:name={url}
          class="max-h-[25rem] mx-auto object-scale-down"
          width={720}
          height={360}
          src={heroImage}
          alt=""
        />
      )
    }
    <h1 class="title" transition:name={heroImage ? "" : url}>{title}</h1>
    {pubDate && <time>{pubDate}</time>}
    {
      updatedDate && (
        <div>
          Last updated on <time>{updatedDate}</time>
        </div>
      )
    }
    <slot />
  </article>
  {
    !about && (
      <script
        src="https://giscus.app/client.js"
        data-repo="Tricked-dev/tricked.dev"
        data-repo-id="R_kgDOHYCdHg"
        data-category="Blogs"
        data-category-id="DIC_kwDOHYCdHs4CS7Mv"
        data-mapping="title"
        data-strict="0"
        data-reactions-enabled="1"
        data-emit-metadata="0"
        data-input-position="bottom"
        data-theme="dark"
        data-lang="en"
        data-loading="lazy"
        crossorigin="anonymous"
        async
      />
    )
  }

  <a
    href={`https://github.com/Tricked-dev/tricked.dev/tree/master/src/pages/blog/${file
      .split("/")
      .at(-1)}`}>View on Github</a
  >
</Layout>
