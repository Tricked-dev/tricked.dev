---
import BaseHead from "../BaseHead.astro";

const {
  entry: {
    data: { title, image },
    body,
  },
} = Astro.props;
---

<style>
  * {
    --width: auto;
  }
</style>

<BaseHead
  title={title}
  description={body.trim().split("\n")[0].trim() +
    " " +
    (body.trim().split("\n")?.[1]?.trim() ?? "")}
  image={image}
/>

<style>
  body {
    --width: auto;
  }
</style>
